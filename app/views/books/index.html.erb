<h1> Books Index </h1> 
    <ul>
    <% @books.each do |b|%>
      <li><%= b.title%> <strong><%= link_to b.author.name, author_path(b.author_id) %></strong></li>
    <% end %>
    </ul>

 <%= form_tag("/books", method: 'get') do %> 
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
  <% end %>  


