<h1>Edit <%= @review.title%></h1>

<%= form_for(@review) do |f|%>

  <%= f.label "Choose an author:" %>
  <%= f.collection_select :author_id, Author.all, :id, :name, include_blank: true %>


   <p>Or create a new author:
  <%= f.fields_for :author do |a|%>
    <%= a.text_field :name%>
  <% end %>
  </p>

  <br>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br></br>
  <%= f.label :content %>
  <%= f.text_area :content %>


  <%= f.submit %>

<% end %>